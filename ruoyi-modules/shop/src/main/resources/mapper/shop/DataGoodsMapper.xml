<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.DataGoodsMapper">
    
    <resultMap type="DataGoods" id="DataGoodsResult">
        <result property="goodsId"    column="goods_id"    />
        <result property="goodsName"    column="goods_name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="specType"    column="spec_type"    />
        <result property="deductStockType"    column="deduct_stock_type"    />
        <result property="content"    column="content"    />
        <result property="salesInitial"    column="sales_initial"    />
        <result property="salesActual"    column="sales_actual"    />
        <result property="goodsSort"    column="goods_sort"    />
        <result property="deliveryId"    column="delivery_id"    />
        <result property="goodsStatus"    column="goods_status"    />
        <result property="isDelete"    column="is_delete"    />
        <result property="wxappId"    column="wxapp_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="slider"    column="slider"    />
        <result property="cover"    column="cover"    />
    </resultMap>

    <sql id="selectDataGoodsVo">
        select goods_id, goods_name, category_id, spec_type, deduct_stock_type, content, sales_initial, sales_actual, goods_sort, delivery_id, goods_status, is_delete, wxapp_id, create_time, update_time, slider, cover from data_goods
    </sql>

    <select id="selectDataGoodsList" parameterType="DataGoods" resultMap="DataGoodsResult">
        <include refid="selectDataGoodsVo"/>
        <where>  
            <if test="goodsName != null  and goodsName != ''"> and goods_name like concat('%', #{goodsName}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="specType != null "> and spec_type = #{specType}</if>
            <if test="deductStockType != null "> and deduct_stock_type = #{deductStockType}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="salesInitial != null "> and sales_initial = #{salesInitial}</if>
            <if test="salesActual != null "> and sales_actual = #{salesActual}</if>
            <if test="goodsSort != null "> and goods_sort = #{goodsSort}</if>
            <if test="deliveryId != null "> and delivery_id = #{deliveryId}</if>
            <if test="goodsStatus != null "> and goods_status = #{goodsStatus}</if>
            <if test="isDelete != null "> and is_delete = #{isDelete}</if>
            <if test="wxappId != null "> and wxapp_id = #{wxappId}</if>
            <if test="slider != null  and slider != ''"> and slider = #{slider}</if>
            <if test="cover != null  and cover != ''"> and cover = #{cover}</if>
        </where>
    </select>
    
    <select id="selectDataGoodsById" parameterType="Long" resultMap="DataGoodsResult">
        <include refid="selectDataGoodsVo"/>
        where goods_id = #{goodsId}
    </select>
        
    <insert id="insertDataGoods" parameterType="DataGoods" useGeneratedKeys="true" keyProperty="goodsId">
        insert into data_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="goodsName != null and goodsName != ''">goods_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="specType != null">spec_type,</if>
            <if test="deductStockType != null">deduct_stock_type,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="salesInitial != null">sales_initial,</if>
            <if test="salesActual != null">sales_actual,</if>
            <if test="goodsSort != null">goods_sort,</if>
            <if test="deliveryId != null">delivery_id,</if>
            <if test="goodsStatus != null">goods_status,</if>
            <if test="isDelete != null">is_delete,</if>
            <if test="wxappId != null">wxapp_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="slider != null">slider,</if>
            <if test="cover != null">cover,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="goodsName != null and goodsName != ''">#{goodsName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="specType != null">#{specType},</if>
            <if test="deductStockType != null">#{deductStockType},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="salesInitial != null">#{salesInitial},</if>
            <if test="salesActual != null">#{salesActual},</if>
            <if test="goodsSort != null">#{goodsSort},</if>
            <if test="deliveryId != null">#{deliveryId},</if>
            <if test="goodsStatus != null">#{goodsStatus},</if>
            <if test="isDelete != null">#{isDelete},</if>
            <if test="wxappId != null">#{wxappId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="slider != null">#{slider},</if>
            <if test="cover != null">#{cover},</if>
         </trim>
    </insert>

    <update id="updateDataGoods" parameterType="DataGoods">
        update data_goods
        <trim prefix="SET" suffixOverrides=",">
            <if test="goodsName != null and goodsName != ''">goods_name = #{goodsName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="specType != null">spec_type = #{specType},</if>
            <if test="deductStockType != null">deduct_stock_type = #{deductStockType},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="salesInitial != null">sales_initial = #{salesInitial},</if>
            <if test="salesActual != null">sales_actual = #{salesActual},</if>
            <if test="goodsSort != null">goods_sort = #{goodsSort},</if>
            <if test="deliveryId != null">delivery_id = #{deliveryId},</if>
            <if test="goodsStatus != null">goods_status = #{goodsStatus},</if>
            <if test="isDelete != null">is_delete = #{isDelete},</if>
            <if test="wxappId != null">wxapp_id = #{wxappId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="slider != null">slider = #{slider},</if>
            <if test="cover != null">cover = #{cover},</if>
        </trim>
        where goods_id = #{goodsId}
    </update>

    <delete id="deleteDataGoodsById" parameterType="Long">
        delete from data_goods where goods_id = #{goodsId}
    </delete>

    <delete id="deleteDataGoodsByIds" parameterType="String">
        delete from data_goods where goods_id in 
        <foreach item="goodsId" collection="array" open="(" separator="," close=")">
            #{goodsId}
        </foreach>
    </delete>
    
</mapper>