<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.DataTruckTemplateMapper">
    
    <resultMap type="DataTruckTemplate" id="DataTruckTemplateResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="normal"    column="normal"    />
        <result property="content"    column="content"    />
        <result property="sort"    column="sort"    />
        <result property="status"    column="status"    />
        <result property="deleted"    column="deleted"    />
        <result property="createAt"    column="create_at"    />
    </resultMap>

    <sql id="selectDataTruckTemplateVo">
        select id, code, name, normal, content, sort, status, deleted, create_at from data_truck_template
    </sql>

    <select id="selectDataTruckTemplateList" parameterType="DataTruckTemplate" resultMap="DataTruckTemplateResult">
        <include refid="selectDataTruckTemplateVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="normal != null  and normal != ''"> and normal = #{normal}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="sort != null "> and sort = #{sort}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="deleted != null "> and deleted = #{deleted}</if>
            <if test="createAt != null "> and create_at = #{createAt}</if>
        </where>
    </select>
    
    <select id="selectDataTruckTemplateById" parameterType="Long" resultMap="DataTruckTemplateResult">
        <include refid="selectDataTruckTemplateVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDataTruckTemplate" parameterType="DataTruckTemplate" useGeneratedKeys="true" keyProperty="id">
        insert into data_truck_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="normal != null">normal,</if>
            <if test="content != null">content,</if>
            <if test="sort != null">sort,</if>
            <if test="status != null">status,</if>
            <if test="deleted != null">deleted,</if>
            <if test="createAt != null">create_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null">#{code},</if>
            <if test="name != null">#{name},</if>
            <if test="normal != null">#{normal},</if>
            <if test="content != null">#{content},</if>
            <if test="sort != null">#{sort},</if>
            <if test="status != null">#{status},</if>
            <if test="deleted != null">#{deleted},</if>
            <if test="createAt != null">#{createAt},</if>
         </trim>
    </insert>

    <update id="updateDataTruckTemplate" parameterType="DataTruckTemplate">
        update data_truck_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null">code = #{code},</if>
            <if test="name != null">name = #{name},</if>
            <if test="normal != null">normal = #{normal},</if>
            <if test="content != null">content = #{content},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
            <if test="createAt != null">create_at = #{createAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDataTruckTemplateById" parameterType="Long">
        delete from data_truck_template where id = #{id}
    </delete>

    <delete id="deleteDataTruckTemplateByIds" parameterType="String">
        delete from data_truck_template where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>