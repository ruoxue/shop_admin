<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.DataSpecValueMapper">
    
    <resultMap type="DataSpecValue" id="DataSpecValueResult">
        <result property="specValueId"    column="spec_value_id"    />
        <result property="specValue"    column="spec_value"    />
        <result property="specId"    column="spec_id"    />
        <result property="wxappId"    column="wxapp_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectDataSpecValueVo">
        select spec_value_id, spec_value, spec_id, wxapp_id, create_time from data_spec_value
    </sql>

    <select id="selectDataSpecValueList" parameterType="DataSpecValue" resultMap="DataSpecValueResult">
        <include refid="selectDataSpecValueVo"/>
        <where>  
            <if test="specValue != null  and specValue != ''"> and spec_value = #{specValue}</if>
            <if test="specId != null "> and spec_id = #{specId}</if>
            <if test="wxappId != null "> and wxapp_id = #{wxappId}</if>
        </where>
    </select>
    
    <select id="selectDataSpecValueById" parameterType="Long" resultMap="DataSpecValueResult">
        <include refid="selectDataSpecValueVo"/>
        where spec_value_id = #{specValueId}
    </select>
        
    <insert id="insertDataSpecValue" parameterType="DataSpecValue" useGeneratedKeys="true" keyProperty="specValueId">
        insert into data_spec_value
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="specValue != null and specValue != ''">spec_value,</if>
            <if test="specId != null">spec_id,</if>
            <if test="wxappId != null">wxapp_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="specValue != null and specValue != ''">#{specValue},</if>
            <if test="specId != null">#{specId},</if>
            <if test="wxappId != null">#{wxappId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateDataSpecValue" parameterType="DataSpecValue">
        update data_spec_value
        <trim prefix="SET" suffixOverrides=",">
            <if test="specValue != null and specValue != ''">spec_value = #{specValue},</if>
            <if test="specId != null">spec_id = #{specId},</if>
            <if test="wxappId != null">wxapp_id = #{wxappId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where spec_value_id = #{specValueId}
    </update>

    <delete id="deleteDataSpecValueById" parameterType="Long">
        delete from data_spec_value where spec_value_id = #{specValueId}
    </delete>

    <delete id="deleteDataSpecValueByIds" parameterType="String">
        delete from data_spec_value where spec_value_id in 
        <foreach item="specValueId" collection="array" open="(" separator="," close=")">
            #{specValueId}
        </foreach>
    </delete>
    
</mapper>